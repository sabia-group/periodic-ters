#ax[0, 0].contour(mu_neg_zero.T, extent=ex)
ax[0, 0].set_title(r'$\mu_z$, $-Q$, $E=0$')
plot_numbers(ters['dipole0'][0], 6.5, 5, ax[0, 0])

