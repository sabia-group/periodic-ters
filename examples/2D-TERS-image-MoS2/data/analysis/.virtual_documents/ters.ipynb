def plot_numbers(matrix, max, nbins, axis):
    for ni, i in enumerate(np.linspace(-max, max, nbins)):
        for nj, j in enumerate(np.linspace(-max, max, nbins)):
            c = matrix.T[ni, nj]
            axis.text(i, j, f'{c:.3f}', va='center', ha='center', fontsize=9)


